{
  "compilerOptions": {
    "strict": true,
    "lib": [
      "ESNext"
    ],
    "module": "NodeNext",
    "target": "ESNext",
    "outDir": "./public/build",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}